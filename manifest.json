{
  "manifest_version": 3,
  "name": "Password Generator",
  "version": "1.0",
  "description": "Generate secure passwords with SHA256 and PBKDF2.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/key-icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "clipboardWrite"
  ],
  "icons": {
    "16": "icons/key-icon.png",
    "48": "icons/key-icon.png",
    "128": "icons/key-icon.png"
  }
}
